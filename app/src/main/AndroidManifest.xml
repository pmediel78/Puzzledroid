            android:name=".Juego2Activity"
            android:exported="true" />
        <activity
            android:name=".MainActivity2"
            android:exported="true" />
        <activity
            android:name=".AyudaActivity"
            android:exported="true" />
        <activity
            android:name=".JuegoActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity"
