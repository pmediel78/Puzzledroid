<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/purple_700"
    tools:context=".JuegoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Movimientos:"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Counter"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <com.example.puzzledroid.DraggableCoordinatorLayout
        android:id="@+id/parentCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:layout_gravity="center"
        android:background="#fff">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/draggableCard1"
            android:tag="card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:translationZ="2dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/house_part_1" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/draggableCard2"
            android:tag="card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:translationZ="2dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/house_part_2" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/draggableCard3"
            android:tag="card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:translationZ="2dp">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/house_part_3" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/draggableCard4"
            android:tag="card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:translationZ="2dp">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/house_part_4" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fondo1"
            android:tag="draggableCard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="top|center"
            android:translationX="-75dp"
            android:translationY="100dp"
            android:translationZ="1dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/cuadrado" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fondo2"
            android:tag="draggableCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:translationX="75dp"
            android:translationY="100dp"
            android:translationZ="1dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/cuadrado" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fondo3"
            android:tag="draggableCard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:translationX="-75dp"
            android:translationY="250dp"
            android:translationZ="1dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/cuadrado" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fondo4"
            android:tag="draggableCard4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:translationX="75dp"
            android:translationY="250dp"
            android:translationZ="1dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/cuadrado" />

        </com.google.android.material.card.MaterialCardView>

    </com.example.puzzledroid.DraggableCoordinatorLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="110dp"
            android:text="Nivel:"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1 (2x2)"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
    </LinearLayout>



</LinearLayout>